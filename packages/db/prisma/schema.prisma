generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Locale {
  FR
  EN
}

enum ReconciliationStatus {
  UNRECONCILED
  RECONCILED
  IGNORED
}

enum CategorySource {
  NONE
  AUTO
  AI
  MANUAL
}

enum PocketMovementDir {
  ALLOCATION
  WITHDRAWAL
}

enum RecurrenceFrequency {
  WEEKLY
  MONTHLY
  ANNUAL
}

enum RecurrenceSource {
  AUTO
  MANUAL
}

model User {
  id                  String         @id @default(cuid())
  email               String         @unique
  passwordHash        String
  name                String
  locale              Locale         @default(FR)
  failedLoginAttempts Int            @default(0)
  lockedUntil         DateTime?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  refreshTokens        RefreshToken[]
  importSessions       ImportSession[]
  importedTransactions ImportedTransaction[]
  manualExpenses       ManualExpense[]
  categories           Category[]
  categoryRules        CategoryRule[]
  pockets              Pocket[]
  ownedAccounts        Account[]      @relation("AccountOwner")
  viewableAccounts     AccountViewer[]
  recurringPatterns    RecurringPattern[]
  transferLabelRules   TransferLabelRule[]
}

model Account {
  id                   String    @id @default(cuid())
  accountNumber        String
  label                String
  ownerId              String
  isHidden             Boolean   @default(false)
  lastKnownBalance     Decimal?  @db.Decimal(12, 2)
  lastKnownBalanceDate DateTime? @db.Date
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  owner                User                  @relation("AccountOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  viewers              AccountViewer[]
  importSessions       ImportSession[]
  importedTransactions ImportedTransaction[]
  pockets              Pocket[]

  @@unique([ownerId, accountNumber])
  @@index([ownerId])
}

model AccountViewer {
  id        String   @id @default(cuid())
  accountId String
  userId    String
  createdAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([accountId, userId])
  @@index([userId])
}

model Pocket {
  id         String   @id @default(cuid())
  userId     String
  accountId  String
  name       String   @db.VarChar(100)
  goalAmount Decimal  @db.Decimal(12, 2)
  color      String   @default("#94a3b8")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  account   Account          @relation(fields: [accountId], references: [id], onDelete: Cascade)
  movements PocketMovement[]

  @@index([userId])
  @@index([accountId])
}

model PocketMovement {
  id        String             @id @default(cuid())
  pocketId  String
  direction PocketMovementDir
  amount    Decimal            @db.Decimal(12, 2)
  note      String?            @db.VarChar(255)
  date      DateTime           @db.Date
  createdAt DateTime           @default(now())

  pocket Pocket @relation(fields: [pocketId], references: [id], onDelete: Cascade)

  @@index([pocketId])
  @@index([pocketId, date])
}

model ImportSession {
  id               String    @id @default(cuid())
  userId           String
  accountId        String
  filename         String
  importedAt       DateTime  @default(now())
  exportStartDate  DateTime? @db.Date
  exportEndDate    DateTime? @db.Date
  transactionCount Int?
  balanceDate      DateTime? @db.Date
  balance          Decimal?  @db.Decimal(12, 2)
  currency         String?   @db.VarChar(3)

  user         User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  account      Account               @relation(fields: [accountId], references: [id], onDelete: Cascade)
  transactions ImportedTransaction[]

  @@index([userId, importedAt])
  @@index([accountId])
}

model ImportedTransaction {
  id             String               @id @default(cuid())
  sessionId      String
  userId         String
  accountId      String
  accountingDate DateTime             @db.Date
  valueDate      DateTime?            @db.Date
  label          String
  detail         String?
  debit          Decimal?             @db.Decimal(12, 2)
  credit         Decimal?             @db.Decimal(12, 2)
  status         ReconciliationStatus @default(UNRECONCILED)
  categoryId     String?
  categorySource CategorySource       @default(NONE)
  createdAt      DateTime             @default(now())

  categoryRuleId       String?
  recurringPatternId   String?
  transferPeerId       String?
  transferLabel        String?              @db.VarChar(100)
  transferLabelRuleId  String?

  session             ImportSession      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  account             Account            @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category            Category?          @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryRule        CategoryRule?      @relation(fields: [categoryRuleId], references: [id], onDelete: SetNull)
  recurringPattern    RecurringPattern?  @relation(fields: [recurringPatternId], references: [id], onDelete: SetNull)
  reconciliation      Reconciliation?
  transferPeer        ImportedTransaction?  @relation("TransferLink", fields: [transferPeerId], references: [id], onDelete: SetNull)
  transferPeerOf      ImportedTransaction[] @relation("TransferLink")
  transferLabelRule   TransferLabelRule? @relation(fields: [transferLabelRuleId], references: [id], onDelete: SetNull)

  @@unique([accountId, accountingDate, label, debit, credit], name: "dedup_key")
  @@index([userId, status])
  @@index([sessionId])
  @@index([accountId])
  @@index([categoryId])
  @@index([categoryRuleId])
  @@index([recurringPatternId])
  @@index([transferPeerId])
  @@index([transferLabelRuleId])
}

model RecurringPattern {
  id                 String              @id @default(cuid())
  userId             String
  label              String
  keyword            String
  amount             Decimal?            @db.Decimal(12, 2)
  frequency          RecurrenceFrequency
  source             RecurrenceSource
  isActive           Boolean             @default(true)
  nextOccurrenceDate DateTime?           @db.Date
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  user         User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions ImportedTransaction[]

  @@index([userId])
  @@index([userId, isActive])
}

model ManualExpense {
  id             String         @id @default(cuid())
  userId         String
  amount         Decimal        @db.Decimal(12, 2)
  label          String         @db.VarChar(255)
  date           DateTime       @db.Date
  categoryId     String?
  categorySource CategorySource @default(NONE)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  category       Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  reconciliation Reconciliation?

  @@index([userId, date])
  @@index([categoryId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String
  color     String   @default("#94a3b8")
  isSystem  Boolean  @default(false)
  userId    String?
  createdAt DateTime @default(now())

  user                 User?                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  manualExpenses       ManualExpense[]
  importedTransactions ImportedTransaction[]
  rules                CategoryRule[]

  @@unique([slug, userId])
  @@index([userId])
}

model CategoryRule {
  id         String   @id @default(cuid())
  userId     String?
  keyword    String   @db.VarChar(100)
  categoryId String
  isSystem   Boolean  @default(false)
  amount     Decimal? @db.Decimal(12, 2)
  createdAt  DateTime @default(now())

  user         User?                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  category     Category              @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  transactions ImportedTransaction[]

  @@index([userId])
  @@index([isSystem])
}

model TransferLabelRule {
  id        String   @id @default(cuid())
  userId    String?
  keyword   String   @db.VarChar(100)
  label     String   @db.VarChar(100)
  isSystem  Boolean  @default(false)
  amount    Decimal? @db.Decimal(12, 2)
  createdAt DateTime @default(now())

  user         User?                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions ImportedTransaction[]

  @@index([userId])
}

model Reconciliation {
  id                    String   @id @default(cuid())
  importedTransactionId String   @unique
  manualExpenseId       String   @unique
  confidenceScore       Float
  isAutoMatched         Boolean  @default(false)
  reconciledAt          DateTime @default(now())

  importedTransaction ImportedTransaction @relation(fields: [importedTransactionId], references: [id], onDelete: Cascade)
  manualExpense       ManualExpense       @relation(fields: [manualExpenseId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String    @id @default(cuid())
  token     String    @unique
  family    String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([family])
  @@index([userId])
}
